DROP TABLE IF EXISTS mt_bar;

CREATE TABLE mt_bar (
  bar_id int(11) NOT NULL auto_increment,
  bar_foo_id int(11) default NULL,
  bar_name varchar(25) default NULL,
  bar_status tinyint default NULL,
  bar_created_on timestamp(14) NOT NULL,
  bar_modified_on timestamp(14) NOT NULL,
  bar_created_by varchar(20) default NULL,
  bar_modified_by varchar(20) default NULL,
  PRIMARY KEY  (bar_id)
) TYPE=MyISAM;

DROP TABLE IF EXISTS mt_foo;

CREATE TABLE mt_foo (
  foo_id int(11) NOT NULL auto_increment,
  foo_name varchar(25) default NULL,
  foo_status tinyint(4) default NULL,
  foo_text varchar(255) default NULL,
  foo_data blob,
  foo_created_by varchar(20) default NULL,
  foo_created_on timestamp(14) NOT NULL,
  foo_modified_on timestamp(14) NOT NULL,
  foo_modified_by varchar(20) default NULL,
  PRIMARY KEY  (foo_id)
) TYPE=MyISAM;
