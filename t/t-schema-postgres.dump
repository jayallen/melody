create table mt_bar (
  bar_id integer not null primary key,
  bar_foo_id integer,
  bar_name varchar(25),
  bar_status smallint,
  bar_created_on timestamp not null,
  bar_modified_on timestamp not null,
  bar_created_by varchar(20),
  bar_modified_by varchar(20)
);
create sequence mt_bar_id;

create table mt_foo (
  foo_id integer not null primary key,
  foo_name varchar(25),
  foo_status smallint,
  foo_text varchar(255),
  foo_data bytea,
  foo_created_by varchar(20),
  foo_created_on timestamp not null,
  foo_modified_on timestamp not null,
  foo_modified_by varchar(20)
);
create sequence mt_foo_id;
