# $Id$

use strict;

use lib 'lib', '../lib';
use MT::Bootstrap;
use MT;

my $mt = MT->new() or die MT->errstr;

require Getopt::Long;
my $daemonize = 0;
my $sleep     = 5;
my $help      = 0;
# my $sync      = 0;
# my $rsync_opt = '';
my $load      = 10;
my $verbose   = 0;

Getopt::Long::GetOptions(
    "daemon"      => \$daemonize,
    "sleep=i"     => \$sleep,
    # "help|?"      => \$help,
    # "throttle=i"  => \%throttle,
    # "worker=s"    => \$worker,
    # "sync"        => \$sync,
    # "to|target=s" => \@target,
    # "rsync=s"     => \$rsync_opt,
    "load=i"      => \$load,
    "verbose"     => \$verbose,
);

my %cfg;
$cfg{verbose} = $verbose;

require MT::TheSchwartz;
my $client = MT::TheSchwartz->new(%cfg);
no warnings 'once';
$TheSchwartz::FIND_JOB_BATCH_SIZE = $load;

if ($daemonize) {
    $client->work_periodically($sleep);
} else {
    # First, run periodic tasks
    $mt->run_tasks();
    $client->work_until_done;
}

1;
