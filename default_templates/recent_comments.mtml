<mt:If tag="BlogCommentCount">
    <mt:Comments lastn="10" sort_order="descend">
        <mt:CommentsHeader>
<div class="widget-recent-comments widget">
    <h3 class="widget-header"><__trans phrase="Recent Comments"></h3>
    <div class="widget-content">
        <ul>
        </mt:CommentsHeader>
            <li><__trans phrase="<strong>[_1]:</strong> [_2] <a href="[_3]" title="full comment on: [_4]">read more</a>" params="<$mt:CommentAuthor$>%%<$mt:CommentBody remove_html="1" words="10"$>%%<$mt:CommentLink$>%%<mt:CommentEntry><$mt:EntryTitle$></mt:CommentEntry>"></li>
        <mt:CommentsFooter>
        </ul>
    </div>
</div>
        </mt:CommentsFooter>
    </mt:Comments>
</mt:If>
