#!/usr/bin/perl -w
use strict;

local $| = 1;

use lib 'lib';
use lib 'extlib';
use lib 'tools';
use MT;
use Backup;

## Initialize the MT object to load configuration and drivers.
my $mt = MT->new( Config => '/usr/local/apache/htdocs/mt/mt.cfg' )
     or die MT->errstr;

MT::Backup->restore(Stream => \*STDIN, Compressed => 1)
    or die MT::Backup->errstr;
