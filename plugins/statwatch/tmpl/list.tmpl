<TMPL_INCLUDE NAME="tmpl/swheader.tmpl">

<div class="body-wrap">
    <div class="body-wrap-inner pkg">
        <div id="list-blog">
         
            <TMPL_IF NAME=SETUP><h4 class="message">StatWatch has been successfully installed or updated.</h4></TMPL_IF>
            <div id="leftcol-full" class="list-wrapper">
                <div class="box" id="weblogs-box">
                    <h4>Your Watched Weblogs</h4>
                    <div class="inner">

                        <TMPL_LOOP NAME=BLOG_LOOP><div class="blog-item">
                            <div style="width:130px;" class="blog-info">
                                <h5><TMPL_VAR NAME=BLOG_NAME></h5>
                                <p><a href="<TMPL_VAR NAME=STAT_URL>?__mode=view&amp;blog_id=<TMPL_VAR NAME=BLOG_ID>">Detailed Stat View</a></p>
                            </div>

                            <div class="quickstat-container">
                                <h6>Hits Today</h6>
                                <div class="countbox">
                                    <TMPL_VAR NAME=BLOG_HITS_TODAY>
                                </div>
                            </div>
                            <div class="quickstat-container">
                                <h6>Uniques Today</h6>
                                <div class="countbox">
                                    <TMPL_VAR NAME=BLOG_UNIQUES_TODAY>
                                </div>
                            </div>
                            <TMPL_IF NAME=BLOG_HAS_FEED><div class="quickstat-container">
                                <h6>Feed Subscribers</h6>
                                <div class="countbox">
                                    <TMPL_VAR NAME=BLOG_FEED_SUBSCRIBERS>
                                </div>
                            </div>
                            </TMPL_IF>

                            <div class="quicktop-container">
                                <p class="title<TMPL_UNLESS NAME=BLOG_TOP_REFER> hidden</TMPL_UNLESS>">Top Referrer This Week</p>
                                <p class="url<TMPL_UNLESS NAME=BLOG_TOP_REFER> hidden</TMPL_UNLESS>"><a href="<TMPL_VAR NAME=BLOG_TOP_REFER>" title="<TMPL_VAR NAME=BLOG_TOP_REFER>"><TMPL_VAR NAME=BLOG_TOP_REFER_DISPLAY> <img alt="View URL" src="<TMPL_VAR NAME=STATIC_URI>images/nav_icons/mini/view-site.gif" width="9" height="11" /></a></p>
                                <br class="clr"/>
                                <p class="title<TMPL_UNLESS NAME=BLOG_TOP_PAGE> hidden</TMPL_UNLESS>">Top Page This Week</p>
                                <p class="url<TMPL_UNLESS NAME=BLOG_TOP_PAGE> hidden</TMPL_UNLESS>"><a href="<TMPL_VAR NAME=BLOG_TOP_PAGE>" title="<TMPL_VAR NAME=BLOG_TOP_PAGE>"><TMPL_VAR NAME=BLOG_TOP_PAGE_DISPLAY> <img alt="View URL" src="<TMPL_VAR NAME=STATIC_URI>images/nav_icons/mini/view-site.gif" width="9" height="11" /></a></p>
                            </div>
                        </div>
                        </TMPL_LOOP>
                  
                    </div><!-- end inner -->
                </div><!-- end box -->
            </div><!-- end leftcol-full -->      
        </div><!-- end list-blog -->
    </div>
</div>

<TMPL_INCLUDE NAME="tmpl/swfooter.tmpl">