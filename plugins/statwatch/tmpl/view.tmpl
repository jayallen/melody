<TMPL_INCLUDE NAME="tmpl/swheader.tmpl">

<script type="text/javascript">
function setFeedURL() {
   var url = prompt("Please enter your FeedBurner feed URL: ","<TMPL_VAR NAME=FEED_URL>");
   if (url) {
      window.location = "<TMPL_VAR NAME=STATWATCH_URL>?__mode=setFeedURL&blog_id=<TMPL_VAR NAME=BLOG_ID>&feed_url="+url;
   }
}
</script>

<div class="body-wrap">
   <div class="body-wrap-inner pkg">
      <div class="left-col">
         <div class="short-box">
            <h2 class="title">Hits Today<TMPL_IF NAME=DEBUG> (<TMPL_VAR NAME=HIT_AVERAGE>)</TMPL_IF></h2>
            <div class="number" style="background-color: #<TMPL_VAR NAME=HITS_TODAY_BG>;"><TMPL_VAR NAME=HITS_TODAY></div>
         </div>

         <div class="short-box">
            <h2 class="title">Uniques Today<TMPL_IF NAME=DEBUG> (<TMPL_VAR NAME=UNIQUE_AVERAGE>)</TMPL_IF></h2>
            <div class="number" style="background-color: #<TMPL_VAR NAME=UNIQUES_TODAY_BG>;"><TMPL_VAR NAME=UNIQUES_TODAY></div>
         </div>
         
         <TMPL_IF NAME=HAS_FEED><div class="short-box">
            <h2 class="title">Subscribers<TMPL_IF NAME=DEBUG> (<TMPL_VAR NAME=FEED_AVERAGE>)</TMPL_IF></h2>
            <div class="number" style="background-color: #<TMPL_VAR NAME=FEED_SUBSCRIBERS_BG>;"><TMPL_VAR NAME=FEED_SUBSCRIBERS></div>
         </div>
         </TMPL_IF>
         <TMPL_IF NAME=FEED_PERMIT><p>Please turn Awareness API access on in <a href="http://www.feedburner.com/fb/a/myfeeds">FeedBurner</a> under the "Publicize" tab.</p></TMPL_IF>
         <div class="short-box">
            <h2 class="title">Hits per Hour<TMPL_IF NAME=DEBUG> (<TMPL_VAR NAME=HOUR_AVERAGE>)</TMPL_IF></h2>
            <TMPL_LOOP NAME=HIT_HOUR><div class="hit-hour pkg" style="<TMPL_VAR NAME=CSS>">
               <span class="hour"><TMPL_VAR NAME=HOUR></span>
               <span class="hit"><TMPL_IF NAME=HITS><TMPL_VAR NAME=HITS><TMPL_ELSE>0</TMPL_IF></span>
            </div>
            </TMPL_LOOP>
         </div>
      </div>
      
      <div class="right-col">
         <div class="long-box left">
            <h2 class="title">Top Referrers This Week</h2>
            <TMPL_LOOP NAME=REFERRER_LOOP><div class="referrer pkg <TMPL_VAR NAME=REFERRER_CLASS><TMPL_IF NAME=__last__> last</TMPL_IF>">
               <span class="url">
               <TMPL_IF NAME=REFERRER_TB_URL>
                  <TMPL_VAR NAME=REFERRER_TB_BLOG ESCAPE=HTML>:
                  <a href="<TMPL_VAR NAME=REFERRER_TB_URL ESCAPE=HTML>"><TMPL_VAR NAME=REFERRER_TB_TITLE ESCAPE=HTML></a>
               <TMPL_ELSE>
                  <a title="<TMPL_VAR NAME=REFERRER_DISPLAY ESCAPE=HTML>" href="<TMPL_VAR NAME=REFERRER_URL ESCAPE=HTML>"><TMPL_VAR NAME=REFERRER_DISPLAY></a>
               </TMPL_IF>
               </span>
               <span class="count"><TMPL_VAR NAME=REFERRER_COUNT></span>
            </div>
            </TMPL_LOOP>
         </div>

         <div class="long-box left">
            <h2 class="title">Top Pages This Week</h2>
            <TMPL_LOOP NAME=PAGE_LOOP><div class="page pkg <TMPL_VAR NAME=CLASS><TMPL_IF NAME=__last__> last</TMPL_IF>">
               <span class="url">
                  <TMPL_IF NAME=PAGE_IS_ENTRY>
                     <a href="<TMPL_VAR NAME=PAGE_URL ESCAPE=HTML>"><TMPL_VAR NAME=PAGE_TITLE ESCAPE=HTML></a> <img class="mini" src="<TMPL_VAR NAME=STATIC_URI ESCAPE=HTML>/images/nav_icons/mini/entries.gif" alt="Entry" />
                  <TMPL_ELSE>
                     <a title="<TMPL_VAR NAME=PAGE_TITLE ESCAPE=HTML>" href="<TMPL_VAR NAME=PAGE_URL ESCAPE=HTML>"><TMPL_VAR NAME=PAGE_TITLE ESCAPE=HTML></a>
                  </TMPL_IF>
               </span><span class="count"><TMPL_VAR NAME=PAGE_COUNT></span>
            </div>
            </TMPL_LOOP>
         </div>

         <TMPL_IF NAME=PATHS_EXIST><div class="long-box left">
            <h2 class="title">Comment Paths This Week</h2>
            <TMPL_LOOP NAME=COMMENT_PATHS><div class="page pkg <TMPL_VAR NAME=CLASS>">
	            <span class="url"><TMPL_IF NAME=REFERRER><a href="<TMPL_VAR NAME=REFERRER>"><TMPL_VAR NAME=REFERRER></a> -> <TMPL_ELSE></TMPL_IF><a href=""><TMPL_VAR NAME=ENTRY_TITLE></a> -> <TMPL_VAR NAME=AUTHOR></span>
            </div>
            </TMPL_LOOP>
         </div></TMPL_IF>

      </div><!-- end right-col -->

      <br style="clear: both;" />
      
   </div>
</div>

<TMPL_INCLUDE NAME="tmpl/swfooter.tmpl">