<$mt:setvar name="page_title" value="<__trans phrase="Backup and Refresh Templates">"$>
<mt:include name="include/header.tmpl">
<mt:unless name="message_loop">
<p class="message"><__trans phrase="No templates were selected to process."></p>
<mt:else>
<ul>
    <mt:loop name="message_loop">
    <li><mt:var name="message"></li>
    </mt:loop>
</ul>
</mt:unless>

<div class="actions-bar">
    <div class="actions-bar-inner pkg actions">
        <a href="<mt:var name="return_url" escape="html">" class="primary-button"><__trans phrase="Return to templates"></a>
    </div>
</div>

<mt:include name="include/footer.tmpl">
