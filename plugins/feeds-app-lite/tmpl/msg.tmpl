<$mt:setvar name="screen_type" value="dialog-screen dialog-4"$>
<$mt:var name="page_title" value="<__trans phrase="Feeds.App Lite Widget Creator">"$>
<mt:include name="dialog/header.tmpl">

<mt:if name="not_found">
<div class="error-message"><__trans phrase="No feeds could be discovered using [_1]." params="<$mt:var name="uri" escape="html"$>"></div>
</mt:if>

<mt:if name="feederr">
<div class="error-message"><__trans phrase="An error occurred processing [_1]. Check <a href="javascript:void(0)" onclick="closeDialog('http://www.feedvalidator.org/check.cgi?url=[_2]')">here</a> for more detail and please try again." params="<$mt:var name="uri" escape="html"$>%%<$mt:var name="uri" escape="url"$>"></div>
</mt:if>

<mt:if name="saved">
<p><__trans phrase="Congratulations! A template module Widget named <strong>[_1]</strong> has been created which you can further <a href="javascript:void(0)" onclick="closeDialog('[_2]')">edit</a> to customize its display." params="<$mt:var name="module" escape="html"$>%%<$mt:var name="script_url"$>?__mode=view&amp;amp;_type=template&amp;amp;blog_id=<$mt:var name="blog_id"$>&amp;amp;id=<$mt:var name="module_id"$>"></p>

<mt:if name="wm_is">
<p><__trans phrase="It can be included onto your published blog using <a href="javascript:void(0)" onclick="closeDialog('[_1]')">WidgetManager</a> or this MTInclude tag" params="<$mt:var name="wm_url" escape="html"$>">.</p>
<mt:else>
<p><__trans phrase="It can be included onto your published blog using this MTInclude tag" params="<$mt:var name="wm_url" escape="html"$>">.</p>
</mt:if>

<blockquote><p><strong>&lt;$MTInclude module="<$mt:var name="module" escape="html"$>"$&gt;</strong></p></blockquote>

</mt:if>

<div class="actions-bar">
    <input type="button" onclick="window.location='<$mt:var name="script_url" escape="html"$>?__mode=feedswidget_start&amp;blog_id=<$mt:var name="blog_id"$>'" value="<mt:unless name="saved"><__trans phrase="Go Back"><mt:else><__trans phrase="Create Another"></mt:unless>" />
<mt:if name="saved">
    <input onclick="closeDialog('<$mt:var name="script_url"$>?__mode=list&amp;_type=template&amp;filter_key=widget_templates&amp;blog_id=<$mt:var name="blog_id"$>')" type="button" value="<__trans phrase="Finish">" />
<mt:else>
    <input onclick="closeDialog()" type="button" value="<__trans phrase="Cancel">" />
</mt:if>
</div>

<mt:include name="dialog/footer.tmpl">


