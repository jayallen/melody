<TMPL_INCLUDE NAME="header.tmpl">

<h2><MT_TRANS phrase="Feeds.App Lite Widget Creator"></h2>

<form method="post" action="<TMPL_VAR NAME=SCRIPT_URL>">

    <fieldset>
        <h3><MT_TRANS phrase="Feed Configuration">: <TMPL_VAR NAME=FEED_TITLE ESCAPE=HTML></h3>

    <div class="inner">


<input type="hidden" name="blog_id" value="<TMPL_VAR NAME=BLOG_ID>" />
<input type="hidden" name="__mode" value="save" />
<input type="hidden" name="uri" value="<TMPL_VAR NAME=FEED_URI ESCAPE=HTML>" />

<div class="setting">
<div class="label" style="width: 70px;"><label><MT_TRANS phrase="Feed URL">:</label></div>
<div class="field" style="width: 250px;">
<p><TMPL_VAR NAME=FEED_URI ESCAPE=HTML></p>
</div>
</div>

<div class="setting">
<div class="label" style="width: 50px;"><label for="feed_title"><MT_TRANS phrase="Title">:</label></div>
<div class="field" style="width: 270px;">
<input name="feed_title" id="feed_title" value="<TMPL_VAR NAME=FEED_TITLE ESCAPE=HTML>" maxlength="42" size="40" type="text" />
<p><MT_TRANS phrase="Enter a title for your widget.  This will also be displayed as the title of the feed when used on your published blog."></p>
</div>
</div>

        
<div class="setting">
<div class="label" style="width: 50px;"><label for="lastn"><MT_TRANS phrase="Display">:</label></div>
<div class="field" style="width: 270px;">
<select name="lastn" id="lastn">
<option value="3"><MT_TRANS phrase="3"></option>
<option value="5" selected="selected"><MT_TRANS phrase="5"></option>
<option value="10"><MT_TRANS phrase="10"></option>
<option value=""><MT_TRANS phrase="All"></option>
</select>
<p><MT_TRANS phrase="Select the maximum number of entries to display."></p>
</div>
</div>


<div style="margin-left:70px;">
<input type="submit" value="<MT_TRANS phrase="Save">" />&nbsp;
</div>
</div>
</fieldset>
</form>
<TMPL_INCLUDE NAME="footer.tmpl">
