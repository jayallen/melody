<$mt:var name="page_title" value="<__trans phrase="Feeds.App Lite Widget Creator">"$>

<mt:include name="include/header.tmpl">

<form method="post" action="<$mt:var name="script_url"$>">
<input type="hidden" name="blog_id" value="<$mt:var name="blog_id">" />
<input type="hidden" name="__mode" value="feedswidget_select" />

<div class="field">

<p style="width: 400px"><MT_TRANS phrase="Feeds.App Lite creates modules that include feed data. Once you've used it to create those modules, you can then use them in your blog templates."></p>

<mt:if name="need_uri">
<mtapp:statusmsg class="error" can_close="0">
    <__trans phrase="You must enter an address to proceed">
</mtapp:statusmsg>
</mt:if>

<div class="label-column"><h5><label for="uri"><MT_TRANS phrase="Enter the URL of a feed, or the URL of a site that has a feed."></label></h5></div>
<div class="field-column">
<input style="width:300px;" type="text" name="uri" id="uri" />
</div>
</div>

<div><input type="submit" value="<MT_TRANS phrase="Continue">" /></div>

</form>

<mt:include name="include/footer.tmpl">
