<$mt:var name="page_title" value="<__trans phrase="Feeds.App Lite Widget Creator">"$>

<mt:include name="include/header.tmpl">


<p><__trans phrase="Multiple feeds were discovered. Select the feed you wish to use. Feeds.App Lite supports text-only RSS 1.0, 2.0 and Atom feeds."></p>

<form method="post" action="<$mt:var name="script_url"$>">
<input type="hidden" name="blog_id" value="<$mt:var name="blog_id"$>"/>
<input type="hidden" name="__mode" value="feedswidget_config"/>

<div class="list">
<table class="compact" cellspacing="0" style="width:600px;">
<thead>
<tr>
<th style="width:10%;" class="cb"></th>
<th style="width:50%;"><__trans phrase="Type"></th>
<th style="width:40%;"><__trans phrase="URI"></th>
</tr>
</thead>
<tbody>

<mt:loop name="feeds">
<tr class="<mt:if name="__odd__">odd<mt:else>even</mt:if>">
<td class="cb"><input type="radio" name="uri" value="<$mt:var name="uri" escape="html"$>" /></td>
<td><$mt:var name="title" escape="html"$></td>
<td><$mt:var name="uri" escape="html"$></td>
</tr>
</mt:loop>

</tbody>
</table>
</div>

<br />

<div><input type="submit" value="<__trans phrase="Continue">" /></div>

</form>

<mt:include name="include/footer.tmpl">
