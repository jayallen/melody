<mt:setvarblock name="list_filter_form">
<div class="listing-filter">
    <div class="listing-filter-inner inner pkg">
    <form id="filter-form" method="get" action="<mt:var name="script_url">">
        <input type="hidden" name="__mode" value="list_<$mt:var name="object_type"$>" />
            <mt:if name="blog_id">
        <input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
            </mt:if>
        <input id="filter" type="hidden" name="filter" value="" />
        <input id="filter_val" type="hidden" name="filter_val" value="" />
        <div class="filter">
            <div id="filter-title">
            <mt:unless name="filter">
                    <strong><__trans phrase="All [_1]" params="<$mt:var name="object_label_plural"$>"></strong>
                    <a href="javascript:void(0)" onclick="toggleFilter()" class="filter-link">[ <__trans phrase="change"> ]</a>
            <mt:else>
                    <strong><a href="javascript:void(0)" onclick="toggleFilter()">
                <mt:if name="filter_special">
                        <$mt:var name="filter_phrase"$>
                <mt:else>
                        <__trans phrase="[_1] where [_2] is [_3]" params='<$mt:var name="object_label_plural"$>%%<span id="filter-text-col">&nbsp;</span>%%<span id="filter-text-val"></span>'>
                </mt:if>
                    </a></strong>
                    <a class="filter-link" href="<mt:var name="script_url">?__mode=<mt:var name="mode"><mt:if name="blog_id">&amp;blog_id=<mt:var name="blog_id"></mt:if><mt:if name="is_power_edit">&amp;is_power_edit=1</mt:if>">[ <__trans phrase="Remove filter"> ]</a>
            </mt:unless>
            </div>
            <div id="filter-select" class="page-title" style="display: none">
                <__trans phrase="Show only [_1] where" params="<$mt:var name="object_label_plural"$>">
                <!-- begin filter form -->
                    <select id="filter-col" name="filter-col" onchange="setFilterCol(this.options[this.selectedIndex].value); enableFilterButton()">
                        <option value="status"><__trans phrase="status"></option>
                    </select>
                    <__trans phrase="is">
                    <span id="filter-status" style="display: none">
                        <select name="status-val" onchange="enableFilterButton()">
                            <option value="approved"><__trans phrase="approved"></option>
                            <option value="pending"><__trans phrase="unapproved"></option>
                        </select>
                    </span>
                <!-- end filter form -->
                &nbsp;
                <input type="button" value="<__trans phrase="Filter">" id="filter-button" style="display: none" onclick="return execFilter(this.form)" />
                <input type="button" value="<__trans phrase="Cancel">" onclick="toggleFilter()" />
            </div>
        </div>
    </form>
    </div>
</div>
</mt:setvarblock>
<mt:setvarblock name="action_buttons">
    <mt:unless name="tab_junk">
        <a href="javascript:void(0)"
            onclick="doForMarkedInThisWindow(getByID('<$mt:var name="object_type"$>-listing-form'), '<__trans phrase="TrackBack">', '<__trans phrase="TrackBacks">', 'id', 'approve_item', {}, '<__trans phrase="to publish">')"
            accesskey="p"
            title="<__trans phrase="Publish selected [_1] (p)" params="<$mt:var name="object_label_plural"$>">"
            ><__trans phrase="Publish"></a>
    </mt:unless>
        <a href="javascript:void(0)"
            onclick="doRemoveItems(getByID('<$mt:var name="object_type"$>-listing-form'), '<__trans phrase="TrackBack">', '<__trans phrase="TrackBacks">')"
            accesskey="x"
            title="<__trans phrase="Delete selected [_1] (x)" params="<$mt:var name="object_label_plural"$>">"
            ><__trans phrase="Delete"></a>
    <mt:unless name="tab_junk">
        <a href="javascript:void(0)"
            onclick="doItemsAreJunk(getByID('<$mt:var name="object_type"$>-listing-form'), '<__trans phrase="TrackBack">', '<__trans phrase="TrackBacks">')"
            accesskey="j"
            title="<__trans phrase="Report selected [_1] as Spam (j)" params="<$mt:var name="object_label_plural"$>">"
            ><__trans phrase="Spam"></a>
    <mt:else>
        <a href="javascript:void(0)"
            onclick="doItemsAreNotJunk(getByID('<$mt:var name="object_type"$>-listing-form'), '<__trans phrase="TrackBack">', '<__trans phrase="TrackBacks">')"
            accesskey="j"
            title="<__trans phrase="Report selected [_1] as Not Spam and Publish (j)" params="<$mt:var name="object_label_plural"$>">"
            ><__trans phrase="Not Spam"></a>
        <a href="javascript:void(0)"
            onclick="submitFormConfirm(getByID('<$mt:var name="object_type"$>-listing-form'), 'empty_junk', '<__trans phrase="Are you sure you want to remove all TrackBacks reported as spam?">')"
            accesskey="j"
            title="<__trans phrase="Deletes all [_1] reported as Spam" params="<$mt:var name="object_label_plural"$>">"
            ><__trans phrase="Empty"></a>
    </mt:unless>
    <mt:if name="is_ip_filter">
            <input type="button" onclick="doBanIP('<mt:var name="filter_val">')" name="banip" value="<__trans phrase="Ban This IP">" />
    </mt:if>
</mt:setvarblock>

