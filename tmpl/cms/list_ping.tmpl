<$mt:setvar name="page_title" value="<__trans phrase="Manage Trackbacks">"$>
<mt:setvarblock name="content_header">
    <mt:if name="saved">
        <mtapp:statusmsg
            id="saved"
            class="success"
            rebuild="all">
            <__trans phrase="Your changes have been saved.">
        </mtapp:statusmsg>
    </mt:if>

    <mt:if name="approved">
        <mtapp:statusmsg
            id="approved"
            class="success">
            <__trans phrase="The selected TrackBack(s) has been approved.">
        </mtapp:statusmsg>
    </mt:if>

    <mt:if name="emptied">
        <mtapp:statusmsg
            id="emptied"
            class="success">
            <__trans phrase="All TrackBacks reported as spam have been removed.">
        </mtapp:statusmsg>
    </mt:if>

    <mt:if name="unapproved">
        <mtapp:statusmsg
            id="unapproved"
            class="success">
            <__trans phrase="The selected TrackBack(s) has been unapproved.">
        </mtapp:statusmsg>
    </mt:if>

    <mt:if name="junked">
        <mtapp:statusmsg
            id="junked"
            class="success">
            <__trans phrase="The selected TrackBack(s) has been reported as spam.">
        </mtapp:statusmsg>
    </mt:if>

    <mt:if name="unjunked">
        <mtapp:statusmsg
            id="unjunked"
            class="success">
            <__trans phrase="The selected TrackBack(s) has been recovered from spam.">
        </mtapp:statusmsg>
    </mt:if>

    <mt:if name="saved_deleted_ping">
        <mtapp:statusmsg
            id="saved-deleted-ping"
            class="success">
            <__trans phrase="The selected TrackBack(s) has been deleted from the database.">
        </mtapp:statusmsg>
    </mt:if>

    <mt:if name="no_junk_found">
        <mtapp:statusmsg
            id="no-junk-found"
            class="info">
            <__trans phrase="No TrackBacks appeared to be spam.">
        </mtapp:statusmsg>
    </mt:if>
</mt:setvarblock>
<mt:setvarblock name="related_content">
    <mtapp:widget
        id="quickfilters"
        label="<__trans phrase="Quickfilters">">
        <ul>
            <li><a href="<mt:var name="script_url">?__mode=list_<$mt:var name="object_type"$><mt:if name="blog_id">&amp;blog_id=<mt:var name="blog_id"></mt:if>&amp;filter=status&amp;filter_val=pending"><__trans phrase="Show unapproved [_1]" params="<$mt:var name="object_label_plural"$>"></a></li>
            <li><a href="<mt:var name="script_url">?__mode=list_<$mt:var name="object_type"$>&amp;tab=junk<mt:if name="blog_id">&amp;blog_id=<mt:var name="blog_id"></mt:if>"><__trans phrase="[_1] Reported as Spam" params="<$mt:var name="object_label_plural"$>"></a></li>
        </ul>
    </mtapp:widget>
    <mtapp:widget
        id="useful-links"
        label="<__trans phrase="Useful links">">
        <ul>
            <li>
        <mt:if name="feed_url">
                <a href="<mt:var name="feed_url" escape="html">" class="icon-feed icon-left" title="<mt:var name="feed_name" escape="html">"><__trans phrase="[_1] Feed" params="<$mt:var name="object_label_plural"$>"></a>
        <mt:else><mt:unless name="tab_junk">
                <a href="<mt:var name="mt_url">?__mode=view&amp;_type=author&amp;id=<mt:var name="author_id">" class="icon-feed-disabled icon-left" title="<__trans phrase="[_1] (Disabled)" params="<$mt:var name="feed_name" escape="html"$>">"><__trans phrase="Set Web Services Password"></a>
        </mt:unless></mt:if>
            </li>
        </ul>
    </mtapp:widget>
    <$mt:include name="include/display_options.tmpl"$>
    <$mtapp:PageActions from="$mode"$>
</mt:setvarblock>
