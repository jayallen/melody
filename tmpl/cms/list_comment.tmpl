<mt:setvarblock name="list_filter_form">
<div class="listing-filter">
    <div class="listing-filter-inner inner pkg">
        <form id="filter-form" method="get" action="<mt:var name="mt_url">">
            <input type="hidden" name="__mode" value="list_<$mt:var name="object_type"$>" />
                <mt:if name="blog_id">
            <input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
                </mt:if>
            <input id="filter" type="hidden" name="filter" value="" />
            <input id="filter_val" type="hidden" name="filter_val" value="" />
            <div class="filter">
                <div class="filter-title">
            <mt:unless name="filter">
                    <strong><__trans phrase="All [_1]" params="<$mt:var name="object_label_plural"$>"></strong>
                    <!-- <a href="#" onclick="toggleFilter()" class="filter-link">[ <__trans phrase="change"> ]</a> -->
            <mt:else>
                <mt:if name="filter_key">
                    <strong><__trans phrase="Showing only: [_1]" params="<mt:var name="filter_label">"></strong>
                    <!-- <a class="filter-link" href="<mt:var name="script_url">?__mode=<mt:var name="mode"><mt:if name="blog_id">&amp;blog_id=<mt:var name="blog_id"></mt:if><mt:if name="is_power_edit">&amp;is_power_edit=1</mt:if>">[ <__trans phrase="Remove filter"> ]</a> -->
                <mt:else>
                    <strong>
                    <mt:if name="filter_newentry">
                        <__trans phrase="[_1] on entries created within the last [_2] days" params="<$mt:var name="object_label_plural"$>%%<mt:var name="filter_val">">
                    <mt:else>
                        <mt:if name="filter_oldentry">
                        <__trans phrase="[_1] on entries created more than [_2] days ago" params="<$mt:var name="object_label_plural"$>%%<mt:var name="filter_val">">
                        <mt:else>
                        <__trans phrase="[_1] where [_2] [_3]" params='<$mt:var name="object_label_plural"$>%%<span id="filter-text-col">&nbsp;</span>%%<span id="filter-text-val"></span>'>
                        </mt:if>
                    </mt:if>
                    </strong>
                <!-- <a href="<mt:var name="script_url">?__mode=<mt:var name="mode"><mt:if name="blog_id">&amp;blog_id=<mt:var name="blog_id"></mt:if><mt:if name="is_power_edit">&amp;is_power_edit=1</mt:if>"><__trans phrase="Remove filter"></a> -->
                </mt:if>
            </mt:unless>
                </div>
            </div>
            <div id="filter-select" style="display: none">
                <__trans phrase="Show">
                <select id="filter-mode" name="mode" onchange="if (this.options[this.selectedIndex].value == 'all') { setFilterCol('none') } else { setFilterCol('status') } enableFilterButton()">
                    <option value="all"><__trans phrase="all"></option>
                    <option value="only"><__trans phrase="only"></option>
                </select>
                <span id="filter-mode-all" style="display: none">
                    <$mt:var name="object_label_plural" lower_case="1"$>
                </span>
                <span id="filter-mode-only" style="display: none">
                    <__trans phrase="[_1] where" params="<$mt:var name="object_label_plural" lower_case="1"$>">
                    <select id="filter-col" name="filter" onchange="setFilterCol(this.options[this.selectedIndex].value);enableFilterButton();">
                        <option value="newentry"><__trans phrase="entry was created in last"></option>
                        <option value="oldentry"><__trans phrase="entry was created more than"></option>
                        <option value="status"><__trans phrase="status"></option>
                        <option value="commenter"><__trans phrase="commenter"></option>
                    </select>
                    <span id="filter-newentry" style="display: none">
                        <input type="text" id="newentry-val" name="filter_val" size="3" value="30" />
                        <__trans phrase=" days.">
                    </span>
                    <span id="filter-oldentry" style="display: none">
                        <input type="text" id="oldentry-val" name="filter_val" size="3" value="30" />
                        <__trans phrase=" days ago.">
                    </span>
                    <span id="filter-status" style="display: none">
                        <select id="status-val" name="filter_val" onchange="enableFilterButton()">
                            <option value="approved"><__trans phrase=" is approved"></option>
                            <option value="pending"><__trans phrase=" is unapproved"></option>
                        </select>
                    </span>
                    <span id="filter-commenter" style="display: none">
                        <select id="commenter-val" name="filter_val" onchange=" is enableFilterButton()">
                            <option value="unauthenticated"><__trans phrase=" is unauthenticated"></option>
                            <option value="authenticated"><__trans phrase=" is authenticated"></option>
                            <option value="trusted"><__trans phrase=" is trusted"></option>
                        </select>
                    </span>
                </span>
                &nbsp;
                <input type="button" value="<__trans phrase="Filter">" id="filter-button" style="display: none" onclick="return execFilter(this.form)" />
                <input type="button" value="<__trans phrase="Cancel">" onclick="toggleFilter()" />
            </div>
        </form>
    </div>
</div>
</mt:setvarblock>
<mt:setvarblock name="action_buttons">
        <input type="button" onclick="doForMarkedInThisWindow(this.form, '<__trans phrase="comment">', '<__trans phrase="comments">', 'id', 'approve_item', {}, '<__trans phrase="to publish">')" value="<__trans phrase="Approve">" accesskey="p" title="<__trans phrase="Approve selected comments (p)">" />
        <input type="button" onclick="doRemoveItems(this.form, '<__trans phrase="comment">', '<__trans phrase="comments">')" name="delete_comments" value="<__trans phrase="Delete">" accesskey="x" title="<__trans phrase="Delete selected comments (x)">" />
    <mt:unless name="filter_spam">
        <input type="button" onclick="doItemsAreJunk(this.form, '<__trans phrase="comment">', '<__trans phrase="comments">')" value="<__trans phrase="Report as Spam">" accesskey="j" title="<__trans phrase="Report the selected comments as spam (j)">" />
    <mt:else>
        <input type="button" onclick="doItemsAreNotJunk(this.form, '<__trans phrase="comment">', '<__trans phrase="comments">')" value="<__trans phrase="Recover from Spam">" accesskey="j" title="<__trans phrase="Recover selected comments (j)">" />
        <input type="button" onclick="submitFormConfirm(this.form, 'empty_junk', '<__trans phrase="Are you sure you want to remove all comments reported as spam?">')" value="<__trans phrase="Empty Spam Folder">" title="<__trans phrase="Deletes all comments reported as spam">" />
    </mt:unless>
    <mt:if name="is_ip_filter">
        <input type="button" onclick="doBanIP('<mt:var name="filter_val">')" name="banip" value="<__trans phrase="Ban This IP">" />
    </mt:if>
</mt:setvarblock>


