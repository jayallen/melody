<$mt:setvar name="screen_type" value="popup-screen"$>
<mt:setvarblock name="page_title"><__trans phrase="Success"></mt:setvarblock>
<mt:setvar name="complete" value="1">
<mt:include name="include/chromeless_header.tmpl">

<h4 class="message">
<mt:if name="all">
<__trans phrase="All of your files have been rebuilt.">
<mt:else>
<mt:if name="is_one_index">
<__trans phrase="Your [_1] has been rebuilt." params="<mt:var name="type" escape="html">">
<mt:else>
<mt:if name="is_entry">
<__trans phrase="Your [_1] has been rebuilt." params="<mt:var name="type" escape="html">">
<mt:else>
<__trans phrase="Your [_1] pages have been rebuilt." params="<mt:var name="type" escape="html">">
</mt:if>
</mt:if>
</mt:if>
<a target="_blank" href="<mt:var name="blog_url" escape="html">"><__trans phrase="View your site."></a>
<mt:if name="is_one_index"><a target="_blank" href="<mt:var name="tmpl_url">"><__trans phrase="View this page."></a>
</mt:if>
</h4>

<div class="right">
<input type="button" onclick="window.location='<mt:var name="script_url">?__mode=rebuild_confirm&amp;blog_id=<mt:var name="blog_id">'" value="<__trans phrase="Rebuild Again">" accesskey="r" />
<input type="button" onclick="window.close()" value="<__trans phrase="Close">" accesskey="c" />
</div>

<mt:include name="include/chromeless_footer.tmpl">
