    <input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
    <input id="filter" type="hidden" name="filter" value="" />
    <input id="filter_val" type="hidden" name="filter_val" value="" />
</form>
    <div class="listing-filter">
