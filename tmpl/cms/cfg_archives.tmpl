<mt:if name="can_set_publish_paths">
<h3><__trans phrase="Publishing Paths"></h3>
<fieldset>

    <mtapp:setting
        id="site_url"
        label="<__trans phrase="Site URL">"
        hint="<__trans phrase="The URL of your website. Do not include a filename (i.e. exclude index.html). Example: http://www.example.com/blog/">"
        show_hint="1"
        help_page="blog_settings_publishing"
        help_section="site_url">
        <input name="site_url" id="site_url" <mt:if name="site_url">disabled="disabled"</mt:if> value="<mt:var name="site_url" escape="html" default="$suggested_site_url">" size="50" /><mt:if name="site_url"> <a href="#" title="<__trans phrase="Unlock this blog&rsquo;s site URL for editing">" onclick="return toggleFile('site_url')"><img src="<mt:var name="static_uri">images/locked.gif" alt="Site URL Lock" id="site_url-lock" height="14" width="14" /></a></mt:if>

        <p class="alert-warning-inline icon-left icon-warning" id="site_url-warning" style="display: none"><__trans phrase="Warning: Changing the site URL can result in breaking all the links in your blog."></p>
    </mtapp:setting>

    <mtapp:setting
        id="site_path"
        label="<__trans phrase="Site Root">"
        hint="<__trans phrase="The path where your index files will be published. An absolute path (starting with '/') is preferred, but you can also use a path relative to the Movable Type directory. Example: /home/melody/public_html/blog">"
        show_hint="1"
        help_page="blog_settings_publishing"
        help_section="site_root">
        <input name="site_path" id="site_path" <mt:if name="site_path">disabled="disabled"</mt:if> value="<mt:var name="site_path" escape="html" default="$suggested_site_path">" size="50" /><mt:if name="site_path"> <a href="#" title="<__trans phrase="Unlock this blog&rsquo;s site path for editing">" onclick="return toggleFile('site_path')"><img src="<mt:var name="static_uri">images/locked.gif" alt="Site Root Lock" id="site_path-lock" height="14" width="14" /></a></mt:if>

        <p class="alert-warning-inline icon-left icon-warning" id="site_path-warning" style="display: none"><__trans phrase="Note: Changing your site root requires a complete rebuild of your site."></p>
    </mtapp:setting>

    <mtapp:setting
        id="enable_archive_paths"
        label="<__trans phrase="Advanced Archive Publishing">"
        hint="<__trans phrase="Select this option only if you need to publish your archives outside of your Site Root.">"
        help_page="blog_settings_publishing"
        help_section="advanced_archive_publishing">
            <input type="checkbox" name="enable_archive_paths" id="enable_archive_paths" value="1" onclick="toggleSubPrefs(this); return true"<mt:if name="enable_archive_paths"> checked="checked"</mt:if> class="cb" /> <__trans phrase="Publish archives to alternate root path"> 
    </mtapp:setting>

<div id="enable_archive_paths_prefs"<mt:unless name="enable_archive_paths"> style="display: none;"</mt:unless>>

    <mtapp:setting
        id="archive_url"
        label="<__trans phrase="Archive URL">"
        hint="<__trans phrase="Enter the URL of the archives section of your website. Example: http://archives.example.com/">"
        show_hint="1"
        help_page="blog_settings_publishing"
        help_section="archive_url">
        <input name="archive_url" id="archive_url" <mt:if name="archive_url">disabled="disabled"</mt:if> value="<$mt:var name="archive_url" escape="html"$>" size="50" />
        <mt:if name="archive_url">
            <a href="#" title="<__trans phrase="Unlock this blog&rsquo;s archive url for editing">" onclick="return toggleFile('archive_url')"><img src="<mt:var name="static_uri">images/locked.gif" alt="Archive URL Lock" id="archive_url-lock" height="14" width="14" /></a>
            <p class="alert-warning-inline icon-left icon-warning" id="archive_url-warning" style="display: none"><__trans phrase="Warning: Changing the archive URL can result in breaking all the links in your blog."></p>
        </mt:if>
    </mtapp:setting>

    <mtapp:setting
        id="archive_path"
        label="<__trans phrase="Archive Root">"
        hint="<__trans phrase="Enter the path where your archive files will be published. Example: /home/melody/public_html/archives">"
        show_hint="1"
        help_page="blog_settings_publishing"
        help_section="archive_path">
            <input name="archive_path" id="archive_path" <mt:if name="archive_path">disabled="disabled"</mt:if> value="<mt:var name="archive_path" escape="html">" size="50" />
            <mt:if name="archive_path">
                <a href="#" title="<__trans phrase="Unlock this blog&rsquo;s site path for editing">" onclick="return toggleFile('archive_path')"><img src="<mt:var name="static_uri">images/locked.gif" alt="Archive Path Lock" id="archive_path-lock" height="14" width="14" /></a>
                <p class="alert-warning-inline icon-left icon-warning" id="archive_path-warning" style="display: none"><__trans phrase="Warning: Changing the archive path can result in breaking all the links in your blog."></p>
            </mt:if>
    </mtapp:setting>

</div>


</fieldset>
</mt:if>

<script type="text/javascript">disableFields('site_url','site_path');</script>

<h3><__trans phrase="Publishing Options"></h3>

    <mtapp:setting
        id="preferred_archive_type"
        label="<__trans phrase="Preferred Archive Type">"
        hint="<__trans phrase="When linking to an archived entry&#8212;for a permalink, for example&#8212;you must link to a particular archive type, even if you have chosen multiple archive types.">"
        help_page="blog_settings_publishing"
        help_section="preferred_archive_type">

<mt:loop name="blog_archive_types">
<mt:if name="__first__">
<select name="preferred_archive_type" id="preferred_archive_type">
</mt:if>
<mt:if name="entry"><option value="<mt:var name="archive_type" escape="html">"<mt:if name="archive_type_is_preferred">selected="selected"</mt:if>><mt:var name="archive_type_translated" escape="html"></option></mt:if>
<mt:if name="__last__">
</select>
</mt:if>
</mt:loop>
