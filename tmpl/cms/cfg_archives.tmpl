<mt:if name="show_build_options">
    <mtapp:setting
        id="dynamicity"
        label="<__trans phrase="Dynamic Publishing">"
        help_page="blog_settings_publishing"
        help_section="dynamic_publishing">
<select name="dynamicity" id="dynamicity" onchange="return toggleDynamicOptions(this)">
    <option value="none"<mt:if name="dynamic_none"> selected="selected"</mt:if>><__trans phrase="Build all templates statically"></option>
    <option value="archives"<mt:if name="dynamic_archives"> selected="selected"</mt:if>><__trans phrase="Build only Archive Templates dynamically"></option>
    <option value="custom"<mt:if name="dynamic_custom"> selected="selected"</mt:if>><__trans phrase="Set each template's Build Options separately"></option>
    <option value="all"<mt:if name="dynamic_all"> selected="selected"</mt:if>><__trans phrase="Build all templates dynamically"></option>
</select>
<a href="#" onclick="return openManual('blog_settings_publishing', 'dynamic_publishing')" class="help-link">?</a>

    </mtapp:setting>

<div id="dynamic_options_area"<mt:if name="dynamic_none"> style="display:none;"</mt:if>>

    <mtapp:setting
        id="dynamic_cache"
        label="<__trans phrase="Enable Dynamic Cache">"
        hint="<__trans phrase="Turn on caching.">">
            <input type="checkbox" id="dynamic_cache" name="dynamic_cache" <mt:if name="dynamic_caching">checked="checked"</mt:if>/>
                <label for="dynamic_cache"><__trans phrase="Enable caching"></label>
    </mtapp:setting>
    <mtapp:setting
        id="dynamic_conditional"
        label="<__trans phrase="Enable Conditional Retrieval">"
        hint="<__trans phrase="Turn on conditional retrieval of cached content.">">
            <input type="checkbox" id="dynamic_conditional" name="dynamic_conditional" <mt:if name="dynamic_conditional">checked="checked"</mt:if>/>
                <label for="dynamic_conditional"><__trans phrase="Enable conditional retrieval"></label>
    </mtapp:setting>

</div>
</mt:if>

<fieldset>
    <mtapp:setting
        id="file_extension"
        label="<__trans phrase="File Extension for Archive Files">"
        hint="<__trans phrase="Enter the archive file extension. This can take the form of 'html', 'shtml', 'php', etc. Note: Do not enter the leading period ('.').">"
        help_page="blog_setting_publishing"
        help_section="archive_file_extension">
<input name="file_extension" id="file_extension" size="5" value="<mt:var name="file_extension" escape="html">" />
    </mtapp:setting>

</fieldset>

<h3><__trans phrase="Archive Types"></h3>
<fieldset>
    <mtapp:setting
        id="archive_types"
        label="<__trans phrase="Archive Types">"
        hint="<__trans phrase="Archive types to publish.">"
        help_page="blog_setting_publishing"
        help_section="archive_mapping">
<ul>
<mt:loop name="blog_archive_types">
<li><input type="checkbox" name="archive_type_<mt:var name="archive_type">" id="archive_type_<mt:var name="archive_type">" value="1"<mt:unless name="available"> disabled="disabled"</mt:unless><mt:if name="enabled"> checked="checked"</mt:if> />&nbsp;<label for="archive_type_<mt:var name="archive_type">"><mt:var name="archive_type_translated"><mt:unless name="available">&nbsp;<__trans phrase="(TemplateMap Not Found)"></mt:unless></label></li>
</mt:loop>
</ul>
    </mtapp:setting>

</fieldset>

<div style="text-align: center;">
<input type="submit" value="<__trans phrase="Save Changes">" title="<__trans phrase="Save changes (s)">" accesskey="s" />
</div>

</form>

</div>

