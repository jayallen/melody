<mt:if name="log_table">
<mt:var name="log_filter_form">
<form id="selector-form" class="selector-form" method="post" action="<$mt:var name="script_url"$>" onsubmit="return this.form['__mode'] ? false : true">
    <input type="hidden" name="__mode" value="" />
    <input type="hidden" name="action_name" value="" />
    <input type="hidden" name="itemset_action_input" value="" />
    <input type="hidden" name="return_args" value="<$mt:var name="return_args" escape="html"$>" />
    <input type="hidden" name="magic_token" value="<$mt:var name="magic_token"$>" />
    <mt:if name="blog_id">
    <input type="hidden" name="blog_id" value="<$mt:var name="blog_id"$>" />
    </mt:if>

<mt:if name="position_actions_top">
    <mt:include name="include/actions_bar.tmpl">
</mt:if>

<mt:loop name="log_table">
<div id="list-log">
<div class="tableselect" id="selector">
<table cellspacing="0"<mt:if name="system_overview_nav"> class="show-weblog"</mt:if>>

<thead>
<tr>
<th id="lt-details" class="si">&nbsp;</th>
<th id="lt-message"><__trans phrase="Log Message"></th>
<mt:if name="system_overview_nav">
<th id="lt-weblog"><__trans phrase="Weblog"></th>
</mt:if>
<th id="lt-ip"><__trans phrase="_LOG_TABLE_BY"></th>
<th id="lt-date"><__trans phrase="Date"></th>
</tr>
</thead>
<tbody>

<mt:loop name="object_loop">
<tr class="<mt:if name="log_detail">log-detail-parent </mt:if><mt:if name="__odd__">odd<mt:else>even</mt:if>"<mt:if name="log_detail"> id="log-detail-parent-<$mt:var name="id"$>"</mt:if>>
<mt:if name="log_detail">
<td class="status-details si"><a href="#" onclick="toggleActive('log-detail-<$mt:var name="id"$>'); toggleActive('log-detail-parent-<$mt:var name="id"$>'); return false;"><img src="<$mt:var name="static_uri"$>images/spacer.gif" alt="" width="9" height="9" /></a></td>
<mt:else>
<td class="status-details si">&nbsp;</td>
</mt:if>
<td class="lt-message"><$mt:var name="log_message" escape="html"$><mt:if name="system_overview_nav"><mt:if name="log_ip"> (<__trans phrase="IP: [_1]" params="<$mt:var name="log_ip"$>">)</mt:if></mt:if></td>
<mt:if name="system_overview_nav">
<td class="lt-weblog"><a href="<$mt:var name="script_url"$>?__mode=view_log&amp;blog_id=<$mt:var name="blog_id"$>"><$mt:var name="weblog_name" escape="html"$></a></td>
</mt:if>
<td class="lt-ip"><mt:if name="username"><$mt:var name="username"$><mt:else><__trans phrase="[_1]" params="<$mt:var name="log_ip"$>"></mt:if></td>
<td class="lt-date"><mt:if name="is_last"><a name="last"></a></mt:if><span title="<$mt:var name="created_on_formatted"$>"><mt:if name="created_on_relative"><mt:if name="dates_relative"><$mt:var name="created_on_relative"$><mt:else><$mt:var name="created_on_formatted"$></mt:if><mt:else><$mt:var name="created_on_formatted"$></mt:if></span></td>
</tr>
<mt:if name="log_detail">
<tr class="log-detail <mt:if name="__odd__">odd<mt:else>even</mt:if>" id="log-detail-<$mt:var name="id"$>">
<td>&nbsp;</td>
<td colspan="4"><div class="detail-inner"><$mt:var name="log_detail"$></div></td>
</tr>
</mt:if>
</mt:loop>

</tbody>
</table>
</div>
</div>
</mt:loop>

<mt:if name="position_actions_bottom">
    <mt:include name="include/actions_bar.tmpl" bar_position="bottom">
</mt:if>

</form>
<mt:else>
    <mtapp:statusmsg
        id="no-log"
        class="info">
        <__trans phrase="No log records could be found.">
    </mtapp:statusmsg>
</mt:if>
