<mtapp:widget
    id="display-options"
    label="<__trans phrase="Display Options">"
    label_link="javascript:void(0)"
    label_onclick="return toggleEntryDisplayOptions();">
    <form method="get" action="<mt:var name="SCRIPT_URL">">
        <input type="hidden" name="__mode" value="update_list_prefs" />
        <input type="hidden" name="_type" value="<mt:var name="OBJECT_TYPE">" />
        <input type="hidden" name="return_args" value="<mt:var name="RETURN_ARGS" escape="HTML">" />
        <mtapp:setting
            id="per_page"
            label="<__trans phrase="Show">"
            label_class="display-options">
            <select name="limit">
                <option value="5"<mt:if name="LIMIT_5"> selected="selected"</mt:if>><__trans phrase="[quant,_1,row]" params="5"></option>
                <option value="10"<mt:if name="LIMIT_10"> selected="selected"</mt:if>><__trans phrase="[quant,_1,row]" params="10"></option>
                <option value="15"<mt:if name="LIMIT_15"> selected="selected"</mt:if>><__trans phrase="[quant,_1,row]" params="15"></option>
                <option value="20"<mt:if name="LIMIT_20"> selected="selected"</mt:if>><__trans phrase="[quant,_1,row]" params="20"></option>
                <option value="50"<mt:if name="LIMIT_50"> selected="selected"</mt:if>><__trans phrase="[quant,_1,row]" params="50"></option>
                <option value="75"<mt:if name="LIMIT_75"> selected="selected"</mt:if>><__trans phrase="[quant,_1,row]" params="75"></option>
                <option value="100"<mt:if name="LIMIT_100"> selected="selected"</mt:if>><__trans phrase="[quant,_1,row]" params="100"></option>
            </select>
        </mtapp:setting>
                
<mt:if name="HAS_EXPANDED_MODE">
        <mtapp:setting
            id="view_mode"
            label="<__trans phrase="View">"
            label_class="display-options">
            <ul>
                <li><input type="radio" name="verbosity" value="compact" <mt:unless name="VIEW_EXPANDED">checked="checked"</mt:unless> class="rb" /> <__trans phrase="Compact"></li>
                <li><input type="radio" name="verbosity" value="expanded" <mt:if name="VIEW_EXPANDED">checked="checked"</mt:if> class="rb" /> <__trans phrase="Expanded"></li>
            </ul>
        </mtapp:setting>
</mt:if>
        <mtapp:setting
            id="actions_position"
            label="<__trans phrase="Actions">"
            label_class="display-options">
            <ul>
                <li><input type="radio" name="actions" value="below" <mt:unless name="POSITION_ACTIONS_BOTH"><mt:if name="POSITION_ACTIONS_BOTTOM">checked="checked"</mt:if></mt:unless> class="rb" /> <__trans phrase="Below"></li>
                <li><input type="radio" name="actions" value="both" <mt:if name="POSITION_ACTIONS_BOTH">checked="checked"</mt:if> class="rb" /> <__trans phrase="Both"></li>
                <li><input type="radio" name="actions" value="above" <mt:unless name="POSITION_ACTIONS_BOTH"><mt:if name="POSITION_ACTIONS_TOP">checked="checked"</mt:if></mt:unless> class="rb" /> <__trans phrase="Above"></li>
            </ul>
        </mtapp:setting>
<mt:unless name="LIST_NONCRON">
    <mt:unless name="IS_POWER_EDIT">
        <mtapp:setting
            id="actions_position"
            label="<__trans phrase="Date Format">"
            label_class="display-options">
            <ul>
                <li><input type="radio" name="dates" value="relative" <mt:if name="DATES_RELATIVE">checked="checked"</mt:if> class="rb" /> <__trans phrase="Relative"></li>
                <li><input type="radio" name="dates" value="full" <mt:if name="DATES_FULL">checked="checked"</mt:if> class="rb" /> <__trans phrase="Full"></li>
            </ul>
        </mtapp:setting>
    </mt:unless>
</mt:unless>
        <div class="buttons">
            <input type="submit" name="save" value="<__trans phrase="Save">" />
            <input type="button" value="<__trans phrase="Cancel">" onclick="toggleEntryDisplayOptions()" />
        </div>
    </form>
</mtapp:widget>
