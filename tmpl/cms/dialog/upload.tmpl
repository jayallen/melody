<$mt:setvar name="screen_type" value="dialog-screen dialog-4"$>
<mt:if name="missing_paths">
<mt:setvarblock name="page_title"><__trans phrase="You need to configure your weblog."></span></mt:setvarblock>
<mt:else>
<mt:setvarblock name="page_title"><mt:var name="blog_name" escape="html">:</span> <__trans phrase="Upload New File"></mt:setvarblock>
</mt:if>
<mt:include name="dialog/header.tmpl">

<script type="text/javascript">
<!--
function setExtraPath(sel) {
   var opt = sel.options[sel.selectedIndex];
   var path = opt.getAttribute("middle_path");
   if (!path) path = '';
   var middle = sel.form['middle_path'];
   if (middle) middle.value = path;
}
//-->
</script>

<mt:if name="missing_paths">
<__trans phrase="Before you can upload a file, you need to publish your weblog. <a href="javascript:void(0);" onclick="closeDialog('[_1]');">Click here</a> to configure your weblog's publishing paths and rebuild your weblog." params="<mt:var name="script_url">?__mode=cfg_archives&amp;blog_id=<mt:var name="blog_id">">

<div class="panel-commands">
<form onsubmit="return false" onclick="window.focus();">
<input onclick="closeDialog()" type="button" value="<__trans phrase="Close">" />
</form>
</div> 

<mt:else>
<mt:if name="error">
    <mtapp:statusmsg
        id="generic-error"
        class="error">
        <mt:var name="error">
    </mtapp:statusmsg>
</mt:if>

<form method="post" enctype="multipart/form-data" action="<mt:var name="script_url">">
<input type="hidden" name="__mode" value="upload_file" />
<input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
<input type="hidden" name="middle_path" value="<mt:var name="middle_path" escape="html">" />
<input type="hidden" name="entry_insert" value="<mt:var name="entry_insert">" />
<input type="hidden" name="edit_field" value="<mt:var name="edit_field">" />

<div class="items-wrapper">
    <span class="modal_added"><__trans phrase="Choose a file from your computer to upload"></span>
</div>

<p class="page-desc"><img border="0" src="<mt:var name="static_uri">images/spacer.gif" width="17" height="5"></p>

<div class="selector list">
    <div class="upload-data-wrapper">
    <b><__trans phrase="File to Upload"></b>
    <div class="upload_indent_choices">
    <p><__trans phrase="Click the button below and select a file on your computer to upload."></p>
    <p><input type="file" name="file" /></p>
    </div>

    <p><b><__trans phrase="Set Upload Path"></b> (<span class="hint"><__trans phrase="Optional">)</span></p>

    <div class="upload_indent_choices">
    <p><__trans phrase="_USAGE_UPLOAD" params="<mt:var name="blog_name" escape="html">"></p>
    <p><__trans phrase="Path">:
    <select name="site_path" onchange="setExtraPath(this)">
    <option value="1">&#60;<__trans phrase="Site Root">&#62;</option>
    <mt:if name="enable_archive_paths">
    <option value="0"<mt:if name="archive_path"> selected="selected"</mt:if>>&#60;<__trans phrase="Archive Root">&#62;</option>
    </mt:if>
    <mt:if name="extra_paths">
    <mt:loop name="extra_paths">
    <option value="<mt:if name="enable_archive_paths">0<mt:else>1</mt:if>" middle_path="<mt:var name="path" escape="html">"<mt:if name="selected"> selected="selected"</mt:if>><mt:var name="label" escape="html"></option>
    </mt:loop>
    </mt:if>
    </select>
    / <input name="extra_path" id="extra_path" value="<mt:var name="extra_path" escape="html">" />
    </p>
    </div>
</div>

<div class="upload_button_spacing">&nbsp;</div>

<div class="actions-bar">
    <input onclick="closeDialog()" type="button" value="<__trans phrase="Cancel">" />
    <input type="submit" value="<__trans phrase="Upload">" />
</div>

<input type="hidden" name="magic_token" value="<mt:var name="magic_token">" />
</form>
</mt:if>

<mt:include name="dialog/footer.tmpl">
