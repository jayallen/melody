<mt:setvarblock name="page_title"><__trans phrase="Temporary Directory Configuration"></mt:setvarblock>

<mt:include name="include/header.tmpl">

<form method="post">
<input type="hidden" name="__mode" value="" />
<input type="hidden" name="step" value="cfg_dir" />
<input type="hidden" name="set_static_uri_to" id="set_static_uri_to" value="<mt:var name="static_uri">">
<input type="hidden" name="config" value="<mt:var name="config" escape="html">" />

<script type="text/javascript">
<!--
function go(mode) {
    var f = document.forms[0];
    f['__mode'].value = mode;
}
// -->
</script>

<mt:unless name="success">
<p>
<__trans phrase="You should configure you temporary directory settings.">
</p>
<mt:else>
<div><__trans phrase="Your TempDir has been successfully configured. Click 'Continue' below to configure your mail settings."></div>
</mt:unless>


<mt:if name="not_found_error">
<div class="error-message"><__trans phrase="[_1] could not be found." params="<mt:var name="temp_dir" escape="html">"></div>
</mt:if>

<mt:if name="not_write_error">
<div class="error-message"><__trans phrase="[_1] is not writable." params="<mt:var name="temp_dir" escape="html">"></div>
</mt:if>

<mt:if name="invalid_error">
<div class="error-message"><__trans phrase="TempDir is required."></div>
</mt:if>

<fieldset>

<!-- TempDir -->

    <mtapp:setting
        id="temp_dir"
        label="<__trans phrase="TempDir">"
        hint="<__trans phrase="The physical path for temporary directory.">">
<input type="text" id="temp_dir" name="temp_dir" value="<mt:if name="temp_dir"><mt:var name="temp_dir" escape="html"></mt:if>" /><br />
    </mtapp:setting>

<div id="goback" <mt:unless name="success">style="display: none"</mt:unless>>
<div class="left">
<input name="back" type="submit" value="<__trans phrase="Back">" onclick="this.form.reset(); go('previous_step');" />
</div>

<div class="right">
<input name="continue" type="submit" value="<__trans phrase="Continue">" name="continue" onclick="go('next_step')" />
</div>

<div class="right">
<input name="test" type="submit" value="<__trans phrase="Test">" onclick="go('test')" />
</div>

</div>

<div id="submit" <mt:if name="success">style="display: none"</mt:if>>
<div class="left">
<input name="back" type="submit" value="<__trans phrase="Back">" onclick="this.form.reset(); go('previous_step')" />
</div>
<div class="right">
<input name="test" type="submit" value="<__trans phrase="Test">" onclick="go('test')" />
</div>
</div>


</fieldset>
</form>

<mt:include name="include/footer.tmpl">
