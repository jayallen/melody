<TMPL_INCLUDE NAME=header.tmpl>

<form method="post" action="mt-wizard.cgi">
<input type="hidden" name="__mode" value="cfg_dir" />
<input type="hidden" name="set_static_uri_to" id="set_static_uri_to" value="<TMPL_VAR NAME=STATIC_URI>">
<input type="hidden" name="config" value="<TMPL_VAR NAME=CONFIG ESCAPE=HTML>" />

<script type="text/javascript">
<!--
function go(mode) {
    var f = document.forms[0];
    f['__mode'].value = mode;
}
// -->
</script>

<h3><MT_TRANS phrase="Step [_1] of [_2]" params="3%%4"> &mdash; <MT_TRANS phrase="Temporary Directory Configuration"></h3>

<TMPL_UNLESS NAME=SUCCESS>
<p>
<MT_TRANS phrase="You should configure you temporary directory settings.">
</p>
<TMPL_ELSE>
<div class="message"><MT_TRANS phrase="Your TempDir has been successfully configured. Click 'Continue' below to configure your mail settings."></div>
</TMPL_UNLESS>


<TMPL_IF NAME=NOT_FOUND_ERROR>
<div class="error-message"><MT_TRANS phrase="[_1] could not be found." params="<TMPL_VAR NAME=TEMP_DIR ESCAPE=HTML>"></div>
</TMPL_IF>

<TMPL_IF NAME=NOT_WRITE_ERROR>
<div class="error-message"><MT_TRANS phrase="[_1] is not writable." params="<TMPL_VAR NAME=TEMP_DIR ESCAPE=HTML>"></div>
</TMPL_IF>

<TMPL_IF NAME=INVALID_ERROR>
<div class="error-message"><MT_TRANS phrase="TempDir is required."></div>
</TMPL_IF>

<fieldset>

<!-- TempDir -->
<div class="setting">
<div class="label">
<label for="temp_dir"><MT_TRANS phrase="TempDir"></label><br />
</div>
<div class="field">
<input type="text" id="temp_dir" name="temp_dir" value="<TMPL_IF NAME=TEMP_DIR><TMPL_VAR NAME=TEMP_DIR ESCAPE=HTML></TMPL_IF>" <TMPL_IF NAME=SUCCESS><TMPL_UNLESS NAME=CHANGED>disabled</TMPL_UNLESS></TMPL_IF> /><br />
<p><MT_TRANS phrase="The physical path for temporary directory."></p>
</div>
</div>

<div id="goback" <TMPL_UNLESS NAME=SUCCESS>style="display: none"</TMPL_UNLESS>>
<input name="back" type="submit" value="<MT_TRANS phrase="Back">" onclick="this.form.reset(); go('configure');" />
<TMPL_IF NAME=CHANGED>
<input name="test" type="submit" value="<MT_TRANS phrase="Test">" />
</TMPL_IF>
<input name="continue" type="submit" value="<MT_TRANS phrase="Continue">" name="continue" onclick="go('cfg_dir_save')" />
</div>

<div id="submit" <TMPL_IF NAME=SUCCESS>style="display: none"</TMPL_IF>>
<input name="back" type="submit" value="<MT_TRANS phrase="Back">" onclick="this.form.reset(); go('configure')" />
<input name="test" type="submit" value="<MT_TRANS phrase="Test">" />
</div>


</fieldset>
</form>
<TMPL_INCLUDE NAME=footer.tmpl>
